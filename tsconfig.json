{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "rootDir": ".",
    "noEmit": true,
    "declaration": true,
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "types": ["node", "react"],
    "lib": ["dom", "esnext"]
  },
  "exclude": ["node_modules", "**/test", "**/dist", "**/types", "**/__tests__"]
}
