{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "rootDir": ".",
    "isolatedModules": false,
    "noEmit": false,
    "declaration": true,
    "module": "System",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "noImplicitAny": false,
    "types": ["node", "react"],
    "lib": ["dom", "esnext"],
    "target": "es2020"
  },
  "exclude": ["node_modules", "**/test", "**/dist", "**/types", "**/__tests__"]
}
