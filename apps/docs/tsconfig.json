{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "rootDir": ".",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "types": ["node", "react", "vite/client"],
    "lib": ["dom", "esnext"],
    "composite": true
  },
  "exclude": [
    "node_modules",
    ".expo",
    "**/test",
    "**/dist",
    "**/types",
    "**/__tests__"
  ],
  "references": [
    {
      "path": "../../packages/tamagui-kit"
    },
    {
      "path": "../../packages/untitled-icons"
    }
  ]
}
